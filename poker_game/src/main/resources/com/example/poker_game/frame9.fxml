<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.poker_game.Frame9Controller" style="-fx-background-image: url('bg2.png'); -fx-background-size: cover;">

        <VBox alignment="CENTER">
                <Label text="儲值" style="-fx-font-size: 36px; -fx-underline: true; -fx-font-weight: bold; -fx-text-fill: yellow;"/>
                <padding><Insets right="33.0" left="40.0" bottom="20.0" top="80"/></padding>
        </VBox>

        <VBox alignment="CENTER">
                <padding><Insets right="33.0" left="40.0" bottom="3"/></padding>
                <Label text="欲儲值金額" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: yellow;"/>
                <TextField fx:id="amountField" promptText="欲儲值金額" style="-fx-font-size: 20px; -fx-alignment: center;"/>
        </VBox>

        <Label fx:id="errorLabel" style="-fx-text-fill: red;"/>

        <VBox alignment="CENTER">
                <padding><Insets right="33.0" left="40.0" bottom="50" top="5"/></padding>
                <Button text="確定" style="-fx-font-size: 20px; -fx-font-weight: bold;" onAction="#switchToFrame7_1"/>
        </VBox>

        <VBox alignment="BOTTOM_RIGHT">
                <Button text="回上一頁" style="-fx-font-size: 20px; -fx-font-weight: bold;" onAction="#switchToFrame7_2"/>
                <padding><Insets top="40.0" right="30"/></padding>
        </VBox>
</VBox>
