<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<VBox alignment="TOP_CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.poker_game.ResultController" style="-fx-background-image: url('bg2.png'); -fx-background-size: cover;">

    <VBox alignment="TOP_CENTER">
        <Label text="結算賭金" style="-fx-font-size: 36px; -fx-underline: true; -fx-font-weight: bold; -fx-text-fill: yellow;"/>
        <padding><Insets right="33.0" left="40.0" bottom="5.0" top="90"/></padding>
    </VBox>

    <VBox alignment="TOP_CENTER">
        <padding><Insets right="33.0" left="40.0" bottom="3"/></padding>
        <TextField promptText="賭金" style="-fx-font-size: 20px;"/>
    </VBox>

    <VBox alignment="TOP_CENTER">
        <padding><Insets right="33.0" left="40.0" bottom="3"/></padding>
        <Label text="錢包" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: yellow;"/>
        <TextField promptText="餘額" style="-fx-font-size: 20px;"/>
    </VBox>

    <VBox alignment="TOP_CENTER">
        <padding><Insets right="33.0" left="40.0" bottom="5" top="15"/></padding>
        <Button text="再玩一局" style="-fx-font-size: 20px; -fx-font-weight: bold;" onAction="#switchToFrame11"/>
    </VBox>

    <VBox alignment="BOTTOM_RIGHT">
        <Button text="回主選單" style="-fx-font-size: 20px; -fx-font-weight: bold;" onAction="#switchToFrame2"/>
        <padding><Insets top="100" right="30"/></padding>
    </VBox>

</VBox>
