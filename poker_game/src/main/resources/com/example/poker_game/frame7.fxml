<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.poker_game.Frame7Controller" style="-fx-background-image: url('bg2.png'); -fx-background-size: cover;">

        <VBox alignment="CENTER">
                <Label text="錢包" style="-fx-font-size: 36px; -fx-underline: true; -fx-font-weight: bold; -fx-text-fill: yellow;"/>
                <padding><Insets right="33.0" left="40.0" bottom="20.0" top="60"/></padding>
        </VBox>

        <VBox alignment="CENTER">
                <padding><Insets right="33.0" left="40.0" bottom="3"/></padding>
                <Label text="餘額" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: yellow;"/>
                <TextField promptText="餘額" prefWidth="100 " fx:id="BalanceField" style="-fx-font-size: 20px; -fx-alignment: center;"/>
        </VBox>

        <VBox alignment="CENTER">
                <padding><Insets right="33.0" left="40.0" bottom="5" top="15"/></padding>
                <Button text="儲值" style="-fx-font-size: 20px; -fx-font-weight: bold;" onAction="#switchToFrame9"/>
        </VBox>

        <VBox alignment="CENTER">
                <padding><Insets right="33.0" left="40.0" bottom="45" top="5"/></padding>
                <Button text="提現" style="-fx-font-size: 20px; -fx-font-weight: bold;" onAction="#switchToFrame6"/>
        </VBox>

        <VBox alignment="BOTTOM_RIGHT">
                <Button text="回主選單" style="-fx-font-size: 20px; -fx-font-weight: bold;" onAction="#switchToFrame2"/>
                <padding><Insets top="5.0" right="30"/></padding>
        </VBox>

</VBox>
