<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<?import javafx.geometry.Insets?>
<VBox alignment="TOP_CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.poker_game.Frame2Controller" style="-fx-background-image: url('bg2.png'); -fx-background-size: cover;">

        <VBox alignment="TOP_CENTER">
                <Label text="主選單" style="-fx-font-size: 36px; -fx-underline: true; -fx-font-weight: bold; -fx-text-fill: yellow;"/>
                <padding><Insets right="33.0" left="40.0" bottom="10.0" top="70"/></padding>
        </VBox>

        <VBox alignment="CENTER">
                <padding><Insets right="33.0" left="40.0" bottom="10" top="5"/></padding>
                <Button text="開始遊戲" style="-fx-font-size: 20px; -fx-font-weight: bold;" onAction="#switchToFrame10"/>
        </VBox>

        <VBox alignment="CENTER">
                <padding><Insets right="33.0" left="40.0" bottom="10" top="10"/></padding>
                <Button text="錢包" style="-fx-font-size: 20px; -fx-font-weight: bold;" onAction="#switchToFrame7"/>
        </VBox>

        <VBox alignment="CENTER">
                <padding><Insets right="33.0" left="40.0" bottom="10" top="10"/></padding>
                <Button text="會員資料" style="-fx-font-size: 20px; -fx-font-weight: bold;" onAction="#switchToFrame5"/>
        </VBox>

        <VBox alignment="CENTER">
                <padding><Insets right="33.0" left="40.0" top="10" bottom="20"/></padding>
                <Button text="遊戲規則" style="-fx-font-size: 20px; -fx-font-weight: bold;"  onAction="#switchTorule"/>
        </VBox>

        <VBox alignment="CENTER">
                <padding><Insets right="33.0" left="40.0" top="5"/></padding>
                <Button text="借款" style="-fx-font-size: 20px; -fx-font-weight: bold;" onAction="#switchToFrame11"/>
        </VBox>

</VBox>
