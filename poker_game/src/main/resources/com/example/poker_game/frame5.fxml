<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.poker_game.Frame5Controller" style="-fx-background-image: url('bg2.png'); -fx-background-size: cover;">

        <VBox alignment="CENTER">
                <Label text="會員資料" style="-fx-font-size: 36px; -fx-underline: true; -fx-font-weight: bold; -fx-text-fill: yellow;"/>
                <padding><Insets bottom="1.0"/></padding>
        </VBox>

        <VBox alignment="CENTER">
                <padding><Insets right="33.0" left="40.0" bottom="3"/></padding>
                <Label text="暱稱" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: yellow;"/>
                <TextField promptText="暱稱" fx:id="nameField" style="-fx-font-size: 20px;"/>
        </VBox>

        <VBox alignment="CENTER">
                <padding><Insets right="33.0" left="40.0" bottom="3"/></padding>
                <Label text="手機號碼" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: yellow;"/>
                <TextField fx:id="phoneNumberField" promptText="手機號碼" style="-fx-font-size: 20px;"/>
        </VBox>

        <VBox alignment="CENTER">
                <padding><Insets right="33.0" left="40.0" bottom="1"/></padding>
                <Label text="email" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: yellow;"/>
                <TextField fx:id="emailField" promptText="email" style="-fx-font-size: 20px;"/>
        </VBox>

        <VBox alignment="CENTER">
                <padding><Insets right="33.0" left="40.0" bottom="1" top="1"/></padding>
                <Button text="儲存變更" style="-fx-font-size: 20px; -fx-font-weight: bold;" onAction="#handleSaveButtonAction"/>
        </VBox>

        <VBox alignment="CENTER">
                <padding><Insets right="33.0" left="40.0" bottom="1" top="1"/></padding>
                <Button text="更改密碼" style="-fx-font-size: 20px; -fx-font-weight: bold;" onAction="#switchToFrame8"/>
        </VBox>

        <VBox alignment="CENTER_RIGHT">
                <Button text="回主選單" style="-fx-font-size: 20px; -fx-font-weight: bold;" onAction="#switchToFrame2"/>
                <padding><Insets top="1.0" right="30"/></padding>
        </VBox>

</VBox>
